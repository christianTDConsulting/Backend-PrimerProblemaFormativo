generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model clientes {
  id         Int         @id @default(autoincrement())
  nombre     String?     @db.VarChar(50)
  email      String      @unique(map: "email") @db.VarChar(50)
  bio        String?     @db.VarChar(200)
  nacimiento DateTime    @db.Date
  telefonos  telefonos[]
}

model telefonos {
  id         Int        @id @default(autoincrement())
  numero     String     @db.VarChar(15)
  id_cliente Int        @default(0)
  consumos   consumos[]
  clientes   clientes   @relation(fields: [id_cliente], references: [id], onDelete: Cascade, map: "FK__clientes")

  @@index([id_cliente], map: "FK__clientes")
}

model consumos {
  id          Int       @id @default(autoincrement())
  id_telefono Int
  consumo     Float     @default(0)
  fecha       DateTime  @db.Date
  telefonos   telefonos @relation(fields: [id_telefono], references: [id], onDelete: Cascade, map: "FK_gastos_telefonos")

  @@index([id_telefono], map: "FK_gastos_telefonos")
}
